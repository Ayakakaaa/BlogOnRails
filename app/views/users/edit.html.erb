<h1>Edit</h1>

<%= form_with model: @user, local: true do |f|%>
    <% if @user.errors.any? %>
        <p>
        <%= @user.errors.full_messages.join(',')%>
        </p>
    <%end%>

   <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :email %>
        <%= f.email_field :email %>
    </div>

       <%= f.submit "Save Change"%>
<%end%>
       <%= link_to "Change Password", edit_user_password_path(@user.id) %>